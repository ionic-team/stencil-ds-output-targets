{
  "name": "root",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ionic-team/stencil-ds-output-targets.git"
  },
  "scripts": {
    "build": "lerna run build",
    "build.core": "pnpm --filter component-library run build",
    "build.react": "pnpm --filter component-library-react run build",
    "build.vue": "pnpm --filter component-library-vue run build",
    "changelog": "lerna-changelog",
    "prettier": "lerna run prettier",
    "prettier.dry-run": "lerna run prettier.dry-run",
    "start:next": "pnpm --filter next-app run start",
    "start:nuxt": "pnpm --filter nuxt-app run start",
    "test": "lerna run test"
  },
  "devDependencies": {
    "@ionic/prettier-config": "^2.0.0",
    "lerna": "^8.0.0",
    "lerna-changelog": "^2.0.0",
    "np": "^10.0.2",
    "prettier": "2.7.1",
    "semver": "^5.5.0",
    "ts-jest": "^26.2.0"
  },
  "prettier": "@ionic/prettier-config"
}
